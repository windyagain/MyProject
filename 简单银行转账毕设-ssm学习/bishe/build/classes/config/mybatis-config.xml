<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 打印查询语句 -->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias alias="User" type="com.model.User"/>
        <typeAlias alias="Card" type="com.model.Card"/>
        <typeAlias alias="UserCard" type="com.model.UserCard"/>
        <typeAlias alias="Bank" type="com.model.Bank"/>
        <typeAlias alias="Log" type="com.model.Log"/>
        <typeAlias alias="Admin" type="com.model.Admin"/>
    </typeAliases>
    <mappers>
        <mapper resource="com/mapper/userMapper.xml" />
        <mapper resource="com/mapper/cardMapper.xml" />
        <mapper resource="com/mapper/userCardMapper.xml" />
        <mapper resource="com/mapper/bankMapper.xml" />
        <mapper resource="com/mapper/logMapper.xml" />
        <mapper resource="com/mapper/adminMapper.xml" />
    </mappers>
</configuration>