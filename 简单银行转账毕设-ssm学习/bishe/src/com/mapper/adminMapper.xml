<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.AdminMapper">
    <!-- 解决表名与字段不匹配 -->
    <resultMap type="Admin" id="adminResultMap">
        <id property="aid" column="aid"/>
        <result property="admin_name" column="admin_name"/>
        <result property="admin_pwd" column="admin_pwd"/>
    </resultMap>
    
    <select id="getAllAdmin" resultMap="adminResultMap">
        select * from admins
    </select>
    <select id="getOneAdmin" resultMap="adminResultMap" parameterType="Admin">
        select * from admins where admin_name=#{admin_name} and admin_pwd=#{admin_pwd}
    </select>
    
    
    <update id="updateAdminPwdByAdminId" parameterType="Admin">
    update admins set admin_pwd = #{admin_pwd} where aid = #{aid}
    </update> 
    <select id="getAdminByAid" resultMap="adminResultMap" parameterType="Admin">
        select * from admins where aid=#{aid} 
    </select>
    
</mapper>